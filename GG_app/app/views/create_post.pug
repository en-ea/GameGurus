extends layout

block content
  .create-post-container
    h1.page-title Create a Gaming Tip
    p.subtitle Share your knowledge with the Game Gurus community
    
    form.tip-form(action="/create_post" method="POST")
      //- Game selection
      .form-group
        label.form-label(for="game_id") Select Game:
        select.form-control(name="game_id" required)
          option(value="") -- Select a Game --
          each game in games
            option(value=game.id)= game.title

      //- Title
      .form-group
        label.form-label(for="title") Tip Title:
        input.form-control(type="text", name="title", placeholder="Enter a descriptive title for your tip", required)

      //- Difficulty Level with better styling
      .form-group
        label.form-label Difficulty Level:
        .radio-group
          label.radio-option
            input(type="radio", name="level", value="For Beginners", required)
            span.radio-label For Beginners
          label.radio-option
            input(type="radio", name="level", value="For Intermediate")
            span.radio-label For Intermediate
          label.radio-option
            input(type="radio", name="level", value="For Pros")
            span.radio-label For Pros
          label.radio-option
            input(type="radio", name="level", value="All Levels")
            span.radio-label All Levels

      //- Focus Area
      .form-group
        label.form-label Focus Area:
        select.form-control(name="aspects" required)
          option(value="") -- Select Focus Area --
          option(value="Gameplay") Gameplay
          option(value="Strategy") Strategy
          option(value="Guide") Guide
          option(value="Lore") Lore
          option(value="Achievements") Achievements

      //- Content
      .form-group
        label.form-label(for="description") Tip Content:
        textarea.form-control(name="description", rows="6", placeholder="Provide detailed information for your tip. Include steps, examples, and explanations to help other players.", required)

      //- Submit button
      .form-actions
        button.btn.btn-primary.btn-submit(type="submit") Submit Tip
        a.btn.btn-secondary(href="/tips") Cancel